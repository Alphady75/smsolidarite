{% for type, messages in app.flashes %}
	{% for message in messages %}
		<div class="alert alert-{{ type }} alert-dismissible fade show" role="alert" style="text-align: left!important">
			<strong class="my-0 text-{{ type }}">
                {% if type == 'danger' %}
					<i class="fa fa-exclamation-triangle"></i> Echec!
                {% elseif type == 'warning' %}
					<i class="fa fa-exclamation-triangle"></i> Attention!
				{% elseif type =='info' %}
					<i class="fa fa-check"></i> En cours de validation!
				{% elseif type =='success' %}
					<i class="fa fa-check"></i> Succ√®s!
				{% endif %}
            </strong>
			<p class="font-weight-light">{{ message }}</p>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}
{% endfor %}
