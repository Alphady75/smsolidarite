{{ form_start(form, {attr: {class: 'form'}}) }}

<div class="account-info">
    <div class="py-3">
        <div class="row">
            <div class="col-sm-3 text-sm-right">
                <label for="" class="my-2 mr-3">Nom <span class="text-danger font-weight-bold">*</span></label>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    {{ form_row(form.nom) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 text-sm-right">
                <label for="" class="my-2 mr-3">Prénom <span class="text-danger font-weight-bold">*</span></label>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    {{ form_row(form.prenom) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 text-sm-right">
                <label for="" class="my-2 mr-3">Genre <span class="text-danger font-weight-bold">*</span></label>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    {{ form_row(form.genre) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 text-sm-right">
                <label for="" class="my-2 mr-3">Avatar de compte</label>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    {{ form_row(form.imageFile) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 text-sm-right">
                <label for="" class="my-2 mr-3">Pays <span class="text-danger font-weight-bold">*</span></label>
            </div>
            <div class="col-sm-5">
                <div class="form-group">
                    {{ form_row(form.pays) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 text-sm-right">
                <label for="" class="my-2 mr-3">Ville <span class="text-danger font-weight-bold">*</span></label>
            </div>
            <div class="col-sm-5">
                <div class="form-group">
                    {{ form_row(form.ville) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 text-sm-right">
                <label for="" class="my-2 mr-3">Adresse <span class="text-danger font-weight-bold">*</span></label>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    {{ form_row(form.adresse) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 text-sm-right">
                <label for="" class="my-2 mr-3">Téléphone <span class="text-danger font-weight-bold">*</span></label>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    {{ form_row(form.telephone) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 text-sm-right">
                <label for="" class="my-2 mr-3">A propos de vous</label>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    {{ form_row(form.apropos) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 text-sm-right">
                <label for="" class="my-2 mr-3">Adresse e-mail <span
                        class="text-danger font-weight-bold">*</span></label>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    {{ form_row(form.email) }}
                </div>
            </div>
        </div>


        {{ form_rest(form) }}

        <div class="row">
            <div class="col-sm-4 text-sm-right offset-sm-3">
                <button class="button button--effect alt w-100">{{ button_label|default('Mettre à jour') }}</button>
            </div>
        </div>
        
    </div>
</div>

{{ form_end(form) }}