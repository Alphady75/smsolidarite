{% extends 'user.html.twig' %}

{% block title %}Mon compte
{% endblock %}

{% block pagetitle %}
<div class="app-page-title">
	<div class="page-title-wrapper">
		<div class="page-title-heading">
			<div class="page-title-icon">
				<i class="metismenu-icon pe-7s-user"></i>
			</div>
			<div>
				Compte
				{{ user.compte }}
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block body %}

<div class="account-info">
	<div class="account-info__btn-wrapper">
		<a href="#general" class="account-info__btn account-info__btn-active button button--effect">Compte</a>
		<a href="#security" class="account-info__btn button button--effect">Sécurité</a>
	</div>
	<div class="account-content_wrapper">
		<div class="account-content" id="general">
			<div class="avatar-wrapper">
				<div class="avatar-content">
					<div class="avatar">
						<img
							src="{{ user.avatar ? vich_uploader_asset(user) : asset('img/avatar.png') | imagine_filter('very_large_avatar') }}"
							alt="Avatar de {{ user.nom ~ ' ' ~ user.prenom }}" />
					</div>
					<div class="avatar-content__guideline">
						<h6>{{ user.nom ~ ' ' ~ user.prenom }}</h6>
						<p>{{ user.email}}</p>
					</div>
				</div>
			</div>

			<form action="#" name="save__from" method="post" class="save__form">
				<div class="row">
					<div class="col-sm-5">
						<div class="input input--secondary">
							<label for="saveFirstName">Nom(s):</label>
							{{ user.nom }}
						</div>
					</div>
					<div class="col-sm-5">
						<div class="input input--secondary">
							<label for="saveLastName">Prénom(s):</label>
							{{ user.prenom }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-5">
						<div class="input input--secondary">
							<label for="saveFirstName">Genre:</label>
							{{ user.genre }}
						</div>
					</div>
					<div class="col-sm-5">
						<div class="input input--secondary">
							<label for="savePhone">Téléphone:</label>
							{{ user.telephone }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-5">
						<div class="input input--secondary">
							<label for="saveEmail">Email:</label>
							{{ user.email }}
						</div>
					</div>

					<div class="col-sm-5">
						<div class="input input--secondary">
							<label for="saveEmail">Localisation:</label>

							{{ user.pays }}

							{{ user.ville }}

							{{ user.adresse }}

						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-10">
						<div class="input input--secondary">
							<label for="saveEmail">A propos:</label> <br>
							<p class="text-muted py-2">{{ user.apropos }}</p>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-5">
						<div class="input input--secondary">
							<label for="saveEmail">Compte:</label>
							<span class="badge bg-secondary">{{ user.compte }}</span>
						</div>
					</div>
					<div class="col-sm-5">
						<div class="input input--secondary">
							<label for="saveEmail">Statut du compte:</label>
							<span class="badge bg-{{ user.isVerified ? 'success' : 'danger' }}">{{ user.isVerified ? 'Activé' :
								'Non activé' }}</span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-5">
						<div class="input input--secondary">
							<label for="saveEmail">Mot de passe:</label>
							<span>****</span>
						</div>
					</div>
					<div class="col-sm-5">
						<div class="">
							<a href="{{ path('edit_password') }}" class="text-secondary"><i class="fa fa-key"></i> Mettre à
								jour</a>
						</div>
					</div>
				</div>
				<div>
					<a href="{{ path('user_edit_compte') }}" class="button button--effect">Mettre à jour le profile</a>
				</div>
			</form>
			<div class="account-content-single">
				<div class="intro">
					<h5>Notifications</h5>
				</div>
				<div class="account-content-single__inner">
					<div class="content">
						<h6>Announcements</h6>
						<p>Occasional announcements of new features</p>
					</div>
					<div class="content-right">
						<div class="switch-wrapper">
							<input type="checkbox" id="announcement" checked="checked" /><label for="announcement"></label>
						</div>
					</div>
				</div>
			</div>
			<div class="delete-account">
				<div class="delete-content">
					<h6>Supprimer mon compte</h6>
					<p class="secondary">Avant de supprimer votre compte, veuillez noter que si vous supprimez votre compte, Dash ne pourra pas le récupérer.</p>
				</div>
				<a href="#" class="button button--effect"><i class="fa fa-user"></i> Supprimer mon compte</a>
			</div>
		</div>
		<div class="account-content" id="security">
			<div class="two-factor-wrapper">
				<div class="two-factor-content">
					<h6>Authentification à deux facteurs</h6>
					<p>L'authentification à deux facteurs (2FA) peut être utilisée pour aider à protéger votre compte</p>
				</div>
				<a href="#" class="button button--effect">Enable</a>
			</div>
		</div>
	</div>
</div>

{% endblock %}