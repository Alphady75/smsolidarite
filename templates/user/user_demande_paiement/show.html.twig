{% extends 'user.html.twig' %}

{% block title %}Details demande{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h4 class="card-title">Details demande</h4>
    </div>
    <div class="card-body p-0">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ demande_paiement.id }}</td>
                </tr>
                <tr>
                    <th>Montant</th>
                    <td>{{ demande_paiement.montant ~ currency }}</td>
                </tr>
                <tr>
                    <th>Type de virement</th>
                    <td>{{ demande_paiement.typeVirement }}</td>
                </tr>
                <tr>
                    <th>Statut</th>
                    <td>{{ demande_paiement.statut ? 'Confirmer' : 'Rejeter' }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ demande_paiement.created ? demande_paiement.created|date('d/m/Y H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('user_demande_paiement_index') }}">Mes demandes</a>

        {{ include('user/user_demande_paiement/_delete_form.html.twig') }}

    </div>
</div>
{% endblock %}