<!DOCTYPE html>
<html lang="fr">
	<head>
		<!-- required meta -->
		<meta charset="UTF-8"/>
		<meta http-equiv="X-UA-Compatible" content="IE=edge"/>
		<meta
		name="viewport" content="width=device-width, initial-scale=1.0"/>
		<!-- #favicon -->
		<link
		rel="shortcut icon" href="{{ asset('themes/front/assets/images/favicon.png') }}" type="image/x-icon"/>
		<!-- #title -->
		<title>
			{% block title %}
				{{ appName }}
			{% endblock %}
		</title>
		<style>
			.invalid-feedback,
			.is-invalid~.invalid-tooltip,
			.was-validated:invalid~.invalid-feedback,
			.was-validated:invalid~.invalid-tooltip {
				display: block;
				padding: 10px !important;
			}
			.regi__type .check label {
				font-weight: 400 !important;
				margin-bottom: 7px;
			}
		</style>
		<!-- #keywords -->
		<meta
		name="keywords" content="Real Estate, Investment, Properties, Rent"/>
		<!-- #description -->
		<meta
		name="description" content="Real Estate Investment For Everyone"/>
		<!-- #author -->
		<meta
		name="author" content="Pixelaxis"/>

		<!-- ==== css dependencies start ==== -->

		{% block stylesheets %}
			<!-- bootstrap five css -->
			<link
			rel="stylesheet" href="{{ asset('themes/front/assets/vendor/bootstrap/css/bootstrap.min.css') }}"/>
			<!-- font awesome six css -->
			<link
			rel="stylesheet" href="{{ asset('themes/front/assets/vendor/font-awesome/css/all.min.css') }}"/>
			<!-- nice select css -->
			<link
			rel="stylesheet" href="{{ asset('themes/front/assets/vendor/nice-select/css/nice-select.css') }}"/>
			<!-- magnific popup css -->
			<link
			rel="stylesheet" href="{{ asset( 'themes/front/assets/vendor/magnific-popup/css/magnific-popup.css' ) }}"/>
			<!-- slick css -->
			<link
			rel="stylesheet" href="{{ asset('themes/front/assets/vendor/slick/css/slick.css') }}"/>
			<!-- animate css -->
			<link rel="stylesheet" href="{{ asset('themes/front/assets/vendor/animate/animate.css') }}"/>

			<!-- ==== css dependencies end ==== -->

			<!-- main css -->
			<link rel="stylesheet" href="{{ asset('themes/front/assets/css/style.css') }}"/> {{ encore_entry_link_tags("app") }}

		{% endblock %}
	</head>

	<body>
		<div class="wrapper bg__img" data-background="{{ asset('themes/front/assets/images/registration-bg.png') }}">
			<!-- ==== header start ==== -->
			{% block header %}

				<!-- ==== header start ==== -->
				<header class="header header--secondary">
					<nav class="navbar navbar-expand-xl">
						<div class="container">
							<a class="navbar-brand" href="{{ path('accueil') }}">
								<img src="{{ asset('themes/front/assets/images/logo.jpg') }}" alt="Logo" class="logo"/>
							</a>
							<div class="navbar__out order-2 order-xl-3">
								<div class="nav__group__btn">
									{% if app.request.attributes.get('_route') == 'app_login' %}

										<a href="{{ path('app_register') }}" class="button button--effect d-none d-sm-block">
											Investir
											<i class="fa-solid fa-arrow-right-long"></i>
										</a>
									{% else %}
										<a href="{{ path('app_login') }}" class="button button--effect d-none d-sm-block">
											Connexion
											<i class="fa-solid fa-arrow-right-long"></i>
										</a>
									{% endif %}
								</div>
								<button class="navbar-toggler d-block d-sm-none" type="button" data-bs-toggle="collapse" data-bs-target="#primaryNav" aria-controls="primaryNav" aria-expanded="false" aria-label="Toggle Primary Nav">
									<span class="icon-bar top-bar"></span>
									<span class="icon-bar middle-bar"></span>
									<span class="icon-bar bottom-bar"></span>
								</button>
							</div>
							<div class="collapse navbar-collapse order-3 order-xl-2" id="primaryNav">
								<ul class="navbar-nav">
									<li class="nav-item d-block d-sm-none">
										{% if app.request.attributes.get('_route') == 'app_login' %}

											<a href="{{ path('app_register') }}" class="button button--effect d-none d-sm-block">
												Investir
												<i class="fa-solid fa-arrow-right-long"></i>
											</a>
										{% else %}
											<a href="{{ path('app_login') }}" class="button button--effect d-none d-sm-block">
												Connexion
												<i class="fa-solid fa-arrow-right-long"></i>
											</a>
										{% endif %}
									</li>
								</ul>
							</div>
						</div>
					</nav>
				</header>
				<!-- ==== #header end ==== -->

			{% endblock %}
			<!-- ==== #header end ==== -->

			<!-- ==== registration section start ==== -->
			<section class="registration clear__top">
				<div class="container">

					<div class="registration__area">

						{% include "partials/front/_flash_message.html.twig" %}
						
						{% block body %}{% endblock %}

						</div>
					</div>
				</section>

				<!-- ==== footer section start ==== -->
				<!-- ==== footer section start ==== -->
				<footer class="footer pos__rel over__hi bg-transparent">
					<div class="container">
						<div class="footer__credit">
							<div class="row d-flex align-items-center">
								<div class="col-sm-12 order-1 order-sm-0 mx-auto">
									<div class="footer__copyright">
										<p class="text-center py-3" style="color: #213186 !important">
											&copy; 2022
											{{ appName }}
											con√ßue par
											<a href="https://themeforest.net/user/pixelaxis">BAYE Conception</a>
										</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</footer>
				<!-- ==== #footer section end ==== -->
				<!-- ==== #footer section end ==== -->

				<!-- Scroll To Top -->
					<a href="javascript:void(0)" class="scrollToTop"> <i class="fa-solid fa-angles-up"></i>
				</a>
			</div>

			{% block javascripts %}

				<!-- ==== js dependencies start ==== -->

				<!-- jquery --><script src="{{ asset('themes/front/assets/vendor/jquery/jquery-3.6.0.min.js') }}"> </script>
				<!-- bootstrap five js -->
				<script src="{{ asset('themes/front/assets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
				<!-- nice select js -->
				<script src="{{ asset( 'themes/front/assets/vendor/nice-select/js/jquery.nice-select.min.js' ) }}"></script>
				<!-- magnific popup js -->
				<script src="{{ asset( 'themes/front/assets/vendor/magnific-popup/js/jquery.magnific-popup.min.js' ) }}"></script>
				<!-- slick js -->
				<script src="{{ asset('themes/front/assets/vendor/slick/js/slick.js') }}"></script>
				<!-- shuffle js -->
				<script src="{{ asset('themes/front/assets/vendor/shuffle/shuffle.min.js') }}"></script>
				<!-- jquery downcount timer -->
				<script src="{{ asset('themes/front/assets/vendor/downcount/jquery.downCount.js') }}"></script>
				<!-- waypoints js -->
				<script src="{{ asset('themes/front/assets/vendor/waypoints-js/jquery.waypoints.min.js') }}"></script>
				<!-- counter up js -->
				<script src="{{ asset('themes/front/assets/vendor/counter-js/jquery.counterup.min.js') }}"></script>
				<!-- apex chart js -->
				<script src="{{ asset('themes/front/assets/vendor/apex-chart/apexcharts.min.js') }}"></script>
				<!-- wow js -->
				<script src="{{ asset('themes/front/assets/vendor/wow/wow.min.js') }}"></script>

				<!-- ==== js dependencies end ==== -->

				<!-- plugin js -->
				<script src="{{ asset('themes/front/assets/js/plugin.js') }}"></script>
				<!-- main js -->
				<script src="{{ asset('themes/front/assets/js/main.js') }}"></script>

				{{ encore_entry_script_tags("app") }}

			{% endblock %}
		</body>
	</html>
