{% extends 'auth.html.twig' %}

{% block title %}Réinitialisez votre mot de passe
{% endblock %}

{% block body %}
	<h1 class="h5">Réinitialisez votre mot de passe</h1>

	{{ form_start(resetForm, {attr: {class: 'form'}}) }}

	<div class="input input--secondary py-1">
		{{ form_row(resetForm.plainPassword) }}
	</div>

	<button class="button button--effect w-100">Réinitialisez le mot de passe</button>
	{{ form_end(resetForm) }}
{% endblock %}
